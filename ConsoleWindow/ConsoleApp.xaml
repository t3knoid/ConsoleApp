<Window x:Class="ConsoleWindow.ConsoleApp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ConsoleApp" MinHeight="300" MinWidth="300" Height="300" Width="300" Closing="OnClosing" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <TextBox x:Name="tbConsoleOutput" IsUndoEnabled="False" ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,10,10,0" TextWrapping="Wrap" AcceptsReturn="True" Grid.Row="1" />
        <Button x:Name="btClose" Content="Close" HorizontalAlignment="Right" Margin="0,15,30,0" Grid.Row="2" VerticalAlignment="Top" Width="75" Click="btClose_Click"/>

    </Grid>
</Window>
